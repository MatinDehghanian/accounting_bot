# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# Webhook Secret (optional)
WEBHOOK_SECRET=your_webhook_secret_here

# Database Path
DB_PATH=accounting_bot.db

# Fallback Chat/Topic - Your forum group where admin topics will be created
# This is REQUIRED for auto-creating admin topics
FALLBACK_CHAT_ID=-100xxxxxxxxxx
FALLBACK_TOPIC_ID=

# Backup Topic ID - Topic for automated backup messages (optional)
# Leave empty to auto-create, or set to existing topic ID
BACKUP_TOPIC_ID=

# Panel API Settings (for syncing admins from panel)
PANEL_API_URL=https://your-panel-domain.com
PANEL_USERNAME=admin
PANEL_PASSWORD=your_password_here

# Server Settings
HOST=0.0.0.0
PORT=8080
DEBUG=False